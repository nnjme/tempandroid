<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/scale20dip"
        android:layout_marginRight="@dimen/scale20dip"
        android:layout_marginTop="@dimen/scale30dip"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editAdvice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale280dip"
            android:background="@drawable/input_bg"
            android:gravity="top"
            android:hint="请留下您宝贵的意见"
            android:padding="@dimen/scale30dip"
            android:textColor="#737373"
            android:textSize="@dimen/scale28sp" >
        </EditText>

        <Button
            android:id="@+id/submit"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/scale130dip"
            android:layout_marginTop="@dimen/scale30dip"
            android:background="@drawable/btn_gray"
            android:text="提交"
            android:textColor="@color/black"
            android:textSize="@dimen/scale40sp" />
    </LinearLayout>

</LinearLayout>