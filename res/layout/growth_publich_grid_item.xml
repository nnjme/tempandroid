<?xml version="1.0" encoding="utf-8"?>
<com.changlianxi.view.GridViewItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/fream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.changlianxi.view.RoundAngleImageView
            android:id="@+id/img"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/icon_del"
            android:visibility="gone" />
    </FrameLayout>

</com.changlianxi.view.GridViewItemLayout>