<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale228dip"
        android:text="请选择你所在的国家并输入手机号"
        android:textColor="#b2000000"
        android:textSize="@dimen/scale36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/scale34dip"
        android:layout_marginRight="@dimen/scale34dip"
        android:layout_marginTop="@dimen/scale52dip"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- <Spinner -->
        <!-- android:id="@+id/spinner1" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginLeft="1dip" -->
        <!-- android:layout_marginRight="1dip" -->
        <!-- android:background="@drawable/input_top_radius" -->
        <!-- android:padding="20dip" /> -->

        <EditText
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale129dip"
            android:background="@drawable/input_top_radius"
            android:drawableRight="@drawable/angle_down"
            android:focusable="false"
            android:paddingLeft="@dimen/scale44dip"
            android:text="中国"
            android:textColor="#66000000"
            android:textSize="@dimen/scale46sp" >
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:background="#ffe0e0e0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale129dip"
            android:background="@drawable/input" >

            <EditText
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="手机号码"
                android:inputType="number"
                android:maxLength="13"
                android:padding="17dip"
                android:paddingLeft="@dimen/scale44dip"
                android:singleLine="true"
                android:textColor="#66000000"
                android:textSize="@dimen/scale46sp" >
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/scale129dip"
            android:layout_marginLeft="-1dip"
            android:layout_marginRight="-1dip"
            android:background="@drawable/gray_bottom_radius"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/scale46sp" />
    </LinearLayout>

</LinearLayout>