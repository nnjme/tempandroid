<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择你所在的国家并输入手机号"
        android:textSize="20dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="40dip"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- <Spinner -->
        <!-- android:id="@+id/spinner1" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginLeft="1dip" -->
        <!-- android:layout_marginRight="1dip" -->
        <!-- android:background="@drawable/input_top_radius" -->
        <!-- android:padding="20dip" /> -->

        <EditText
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="@drawable/input_top_radius"
            android:drawableRight="@drawable/angle_down"
            android:focusable="false"
            android:padding="17dip"
            android:text="中国"
            android:textColor="@color/gray_f4"
            android:textSize="23sp" >
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:background="#ffe0e0e0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="@drawable/input" >

            <TextView
                android:id="@+id/txtQH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@null"
                android:text="+86"
                android:textSize="20dip" />

            <EditText
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="手机号码"
                android:inputType="number"
                android:maxLength="13"
                android:padding="17dip"
                android:textSize="20sp" >
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_bottom_radius"
            android:padding="15dip"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>