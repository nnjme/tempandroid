<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale228dip"
        android:text="我们已经向你的手机发送验证码"
        android:textColor="#b2000000"
        android:textSize="@dimen/scale36sp" />

    <TextView
        android:id="@+id/txt_show_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale55dip"
        android:textSize="@dimen/scale66sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/scale34dip"
        android:layout_marginRight="@dimen/scale34dip"
        android:layout_marginTop="@dimen/scale56dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale129dip"
            android:background="@drawable/input_top_radius"
            android:hint="输入验证码"
            android:paddingLeft="@dimen/scale44dip"
            android:textColor="#66000000"
            android:textSize="@dimen/scale46sp" />

        <Button
            android:id="@+id/btfinish_yz"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/scale129dip"
            android:layout_marginLeft="-1dip"
            android:layout_marginRight="-1dip"
            android:background="@drawable/gray_bottom_radius"
            android:text="完成验证"
            android:textColor="@color/white"
            android:textSize="@dimen/scale46sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_get_code"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/scale129dip"
        android:layout_marginLeft="@dimen/scale34dip"
        android:layout_marginRight="@dimen/scale34dip"
        android:layout_marginTop="@dimen/scale30dip"
        android:background="@drawable/btn__radius"
        android:text="重新获取验证码（60s）"
        android:textColor="@color/white"
        android:textSize="@dimen/scale46sp" />

</LinearLayout>