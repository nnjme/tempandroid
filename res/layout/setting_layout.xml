<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dip110"
        android:background="@drawable/top_bg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/home_menu"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_list" />

            <ImageView
                android:id="@+id/imgNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="5dip"
                android:src="@drawable/icon_list_news"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/top_line" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="@dimen/sp42" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/revisePasswordWord"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale119dip"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale40dip"
                        android:layout_weight="1"
                        android:text="修改密码"
                        android:textColor="@color/black"
                        android:textSize="@dimen/scale34sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/scale20dip"
                        android:src="@drawable/angle_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#d1d1d1" />

                <LinearLayout
                    android:id="@+id/adviceFeedBack"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale119dip"
                    android:background="@color/f6"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale40dip"
                        android:layout_weight="1"
                        android:text="意见反馈"
                        android:textColor="@color/black"
                        android:textSize="@dimen/scale34sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/scale20dip"
                        android:src="@drawable/angle_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#d1d1d1" />

                <LinearLayout
                    android:id="@+id/newVersion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale119dip"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale40dip"
                        android:layout_weight="1"
                        android:text="版本更新"
                        android:textColor="@color/black"
                        android:textSize="@dimen/scale34sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/scale20dip"
                        android:src="@drawable/angle_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#d1d1d1" />

                <LinearLayout
                    android:id="@+id/aboutCLX"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale119dip"
                    android:background="@color/f6"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale40dip"
                        android:layout_weight="1"
                        android:text="关于常联系"
                        android:textColor="@color/black"
                        android:textSize="@dimen/scale34sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/scale20dip"
                        android:src="@drawable/angle_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#d1d1d1" />

                <LinearLayout
                    android:id="@+id/problem"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale119dip"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale40dip"
                        android:layout_weight="1"
                        android:text="常见问题"
                        android:textColor="@color/black"
                        android:textSize="@dimen/scale34sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/scale20dip"
                        android:src="@drawable/angle_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#d1d1d1" />

                <LinearLayout
                    android:id="@+id/notices"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale119dip"
                    android:background="@color/f6"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale40dip"
                        android:layout_weight="1"
                        android:text="使用条款和隐私说明"
                        android:textColor="@color/black"
                        android:textSize="@dimen/scale34sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/scale20dip"
                        android:src="@drawable/angle_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#d1d1d1" />

                <Button
                    android:id="@+id/exitLogin"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/scale128dip"
                    android:layout_marginLeft="@dimen/scale20dip"
                    android:layout_marginRight="@dimen/scale20dip"
                    android:layout_marginTop="@dimen/scale30dip"
                    android:background="@drawable/btn"
                    android:text="退出登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/scale43sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>