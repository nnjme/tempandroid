<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dip20"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/setNiceName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dip20"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收信人:"
            android:textColor="#777777"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip16"
                android:text="阿什顿发"
                android:textColor="#000000"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dip16"
                android:src="@drawable/angle_down" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/smsContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dip20"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/information_bg"
        android:paddingBottom="@dimen/dip23"
        android:paddingLeft="@dimen/dip30"
        android:paddingRight="@dimen/dip22"
        android:paddingTop="@dimen/dip23"
        android:text="情爱的裕兴，邀请您加入路口圈子。您可以访问http://clx.tkker.com/a/b/adaddas3查看"
        android:textColor="#737373"
        android:textSize="15sp" />

</LinearLayout>