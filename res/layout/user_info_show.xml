<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/scale390dip"
        android:background="@drawable/header_boxbg" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dip"
            android:src="@drawable/icon_return" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="92dip"
                android:layout_height="92dip"
                android:layout_centerInParent="true"
                android:src="@drawable/header_bg" />

            <com.changlianxi.view.CircularImage
                android:id="@+id/avatar"
                android:layout_width="82.5dip"
                android:layout_height="82.5dip"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:layout_marginTop="8dip"
            android:text="刘德华"
            android:textColor="@color/white"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/txtnews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:textColor="@color/font81"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/header_btn"
            android:paddingBottom="7dip"
            android:paddingLeft="12dip"
            android:paddingRight="13dip"
            android:paddingTop="7dip"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top"
        android:background="@drawable/tab_bg" >

        <LinearLayout
            android:id="@+id/btncall"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_tel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="打电话"
                android:textColor="@color/blue"
                android:textSize="19sp" />
        </LinearLayout>

        <View
            android:layout_width="0.2dip"
            android:layout_height="50dip"
            android:background="#dddddd" />

        <LinearLayout
            android:id="@+id/btnmessage"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:src="@drawable/icon_sms" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="发私信"
                android:textColor="@color/blue"
                android:textSize="19sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- <com.changlianxi.view.ScrollViewWithListView -->
    <!-- android:id="@+id/com.changlianxi.view.ScrollViewWithListView_list" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="fill_parent" -->
    <!-- android:layout_below="@+id/tag" -->
    <!-- android:background="@color/white" -->
    <!-- android:divider="#d1d1d1" -->
    <!-- android:dividerHeight="0.2dip" -->
    <!-- android:scrollbars="none" > -->
    <!-- </com.changlianxi.view.ScrollViewWithListView> -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tag"
        android:background="@color/white"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/layChild"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/laybasic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip "
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/titleKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本信息"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/keyAndValue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dip"
                        android:orientation="vertical" >

                        <!-- com.changlianxi.view.ScrollViewWithcom.changlianxi.view.ScrollViewWithListView -->

                        <com.changlianxi.view.ScrollViewWithListView
                            android:id="@+id/basicListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@null"
                            android:listSelector="@android:color/transparent" >
                        </com.changlianxi.view.ScrollViewWithListView>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dip"
                    android:background="@drawable/gray_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/laycontact"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/f6"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip "
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/titleKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系方式"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/keyAndValue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dip"
                        android:orientation="vertical" >

                        <com.changlianxi.view.ScrollViewWithListView
                            android:id="@+id/contactListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@null"
                            android:listSelector="@android:color/transparent" >

                            <!-- <com.changlianxi.view.ScrollViewWithcom.changlianxi.view.ScrollViewWithListView> -->
                            <!-- </com.changlianxi.view.ScrollViewWithcom.changlianxi.view.ScrollViewWithListView> -->
                        </com.changlianxi.view.ScrollViewWithListView>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dip"
                    android:background="@drawable/gray_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/laysocial"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip "
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/titleKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="社交账号"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/keyAndValue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dip"
                        android:orientation="vertical" >

                        <com.changlianxi.view.ScrollViewWithListView
                            android:id="@+id/socialListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@null"
                            android:listSelector="@android:color/transparent" >

                            <!-- <com.changlianxi.view.ScrollViewWithcom.changlianxi.view.ScrollViewWithListView> -->
                            <!-- </com.changlianxi.view.ScrollViewWithcom.changlianxi.view.ScrollViewWithListView> -->
                        </com.changlianxi.view.ScrollViewWithListView>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dip"
                    android:background="@drawable/gray_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layaddress"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/f6"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip "
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/titleKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通讯地址"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/keyAndValue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dip"
                        android:orientation="vertical" >

                        <com.changlianxi.view.ScrollViewWithListView
                            android:id="@+id/addressListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@null"
                            android:listSelector="@android:color/transparent" >

                            <!-- </com.changlianxi.view.ScrollViewWithcom.changlianxi.view.ScrollViewWithListView> -->
                        </com.changlianxi.view.ScrollViewWithListView>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dip"
                    android:background="@drawable/gray_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layedu"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip "
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/titleKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="教育经历"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/keyAndValue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dip"
                        android:orientation="vertical" >

                        <com.changlianxi.view.ScrollViewWithListView
                            android:id="@+id/eduListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@null"
                            android:listSelector="@android:color/transparent" >
                        </com.changlianxi.view.ScrollViewWithListView>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dip"
                    android:background="@drawable/gray_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/laywork"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/f6"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip "
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/titleKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作经历"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/keyAndValue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dip"
                        android:orientation="vertical" >

                        <com.changlianxi.view.ScrollViewWithListView
                            android:id="@+id/workListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@null"
                            android:listSelector="@android:color/transparent" >

                            <!-- <com.changlianxi.view.ScrollViewWithcom.changlianxi.view.ScrollViewWithListView> -->
                            <!-- </com.changlianxi.view.ScrollViewWithcom.changlianxi.view.ScrollViewWithListView> -->

                        </com.changlianxi.view.ScrollViewWithListView>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dip"
                    android:background="@drawable/gray_line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>